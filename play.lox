// Fibonacci Numbers
print "--- Print first 10 Fibonacci Numbers using Recursion ---";
fun fib(n) {
    if (n <= 1) return n;
    return fib(n - 1) + fib(n - 2);
}

var i = 1;
while (i <= 10) {
    print fib(i);
    i = i + 1;
}
